<resources>

    <!-- 系统预制样式 ，不要修改 -->
    <!-- 基本样式 固定写法 不添加此样式，则AndroidManifest.xml中样式请使用BaseAppTheme-->
    <style name="AppTheme" parent="BaseAppTheme"></style>

    <!-- 标题栏菜单弹出样式 -->
    <style name="OverflowMenuStyle" parent="BaseOverflowMenuStyle">
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">@dimen/dropDownVerticalOffset</item>
    </style>

    <!-- 设置Toolbar标题字体样式 -->
    <style name="Toolbar.TitleText" parent="BaseToolbar.TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <!-- 标题栏标题样式 弹出菜单-->
    <style name="Toolbar.PopupOverlay" parent="BaseToolbar.PopupOverlay">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <!-- 标题栏标题样式 菜单-->
    <style name="Toolbar.AppBarOverlay" parent="BaseToolbar.AppBarOverlay">
        <item name="android:textSize">14sp</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

    <!-- 自定义样式 ，根据需求修改 -->
</resources>
