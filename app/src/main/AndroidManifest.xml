        <meta-data
            android:name="appId"
            android:value="${APP_ID}" />

        <meta-data
            android:name="httpParams"
            android:value="${DEFAULT_HTTP_PARAMS}" />

        <meta-data
            android:name="URL"
            android:value="${URL}"
            tools:replace="android:value" />

        <meta-data
            android:name="UNION_URL"
            android:value="${UNION_URL}"
            tools:replace="android:value" />

    </application>
</manifest>
